<h3><a class="btn btn-secondary" href="/animal">Create New</a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Animals List</h3>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Breed</th>
            <th>Category</th>
            <th>Cage</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.name}}</td>
            <td>{{this.breed}}</td>
            <td>{{this.category}}</td>
            <td>{{this.cage}}</td>
            <td>                
                <a class="btn btn-primary btn-sm" href="/animal/{{this._id}}">Edit</a>
                <a class="btn btn-danger btn-sm" href="/animal/delete/{{this._id}}"
                  onclick="return confirm('Are you sure you want to delete this record ?');">Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>