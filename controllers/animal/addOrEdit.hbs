<h3>{{viewTitle}}</h3>

<form action="/animal" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{animal._id}}">

    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" name="name" placeholder="Name" value="{{animal.name}}">
    </div>

    <div class="form-group">
        <label>Breed</label>
        <input type="text" class="form-control" name="breed" placeholder="Breed" value="{{animal.breed}}">
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Category</label>
            <input type="text" class="form-control" name="category" placeholder="Category" value="{{animal.category}}">
        </div>

        <div class="form-group col-md-6">
            <label>Cage No</label>
            <input type="text" class="form-control" name="cage" placeholder="Cage" value="{{animal.cage}}">
        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-info">Submit</button>
        <a class="btn btn-secondary" href="/animal/list">View All</a>
    </div>

</form>